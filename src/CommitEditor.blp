using Gtk 4.0;
using GtkSource 5;

template $CommitEditor: ScrolledWindow {
  vexpand: true;

  GtkSource.View view {
    buffer: GtkSource.Buffer buffer {
      enable-undo: true;
    };

    monospace: true;
    show-right-margin: true;
    wrap-mode: word;
    tab-width: 2;
    insert-spaces-instead-of-tabs: true;
    top-margin: 12;
    left-margin: 12;
    right-margin: 12;
    bottom-margin: 12;
    input-hints: spellcheck | word_completion | emoji | uppercase_sentences;
  }
}
